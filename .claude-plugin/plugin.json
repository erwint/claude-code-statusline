{
  "name": "cc-statusline",
  "description": "Fast, lightweight statusline showing git info, context usage, tool activity, costs, and more",
  "version": "0.6.0",
  "author": {
    "name": "erwint",
    "url": "https://github.com/erwint"
  },
  "homepage": "https://github.com/erwint/claude-code-statusline",
  "repository": "https://github.com/erwint/claude-code-statusline",
  "license": "MIT",
  "keywords": [
    "statusline",
    "git",
    "context",
    "tools",
    "agents",
    "todos",
    "costs",
    "usage",
    "claude-code"
  ],
  "hooks": {
    "SessionStart": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "${CLAUDE_PLUGIN_ROOT}/scripts/ensure-installed.sh"
          }
        ]
      }
    ]
  }
}
